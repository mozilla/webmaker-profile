doctype
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, target-densitydpi=160dpi, initial-scale=1.0, user-scalable=no')
    title #{title}

    //- CSS with Less inline source annotations for dev; Minified CSS for prod
    - if (typeof dev !== 'undefined' && dev === true)
      link(href='_fe/compiled/app.debug.css', rel='stylesheet', type='text/css', media='all')
    - else
      link(href='_fe/compiled/app.min.css', rel='stylesheet', type='text/css', media='all')
  body

//- Load individual JS files for dev and one concat file for prod
- if (typeof dev !== 'undefined' && dev === true)
  script(data-main='_fe/js/main', src='_fe/js/lib/require.js')
- else
  script(src='_fe/js/lib/require.js')
  script(src='_fe/compiled/app.min.js')
